{
  "manifest_version": 2,

  "name": "TeXr",
  "description": "Making it easy to type math inline, anywhere.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*"
  ],
  "web_accessible_resources": ["icon.png"]
}